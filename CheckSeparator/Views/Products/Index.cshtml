@model IEnumerable<CheckSeparatorMVC.Models.Check>
@{
    ViewData["Title"] = "Check menu";
}

<h1>Your checks:</h1>

@if (Model.Count() == 0)
{
    <p>
        There is no checks!
    </p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>
                    Check Id
                </th>
                <th>
                    Owner name
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var i in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => i.CheckId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => i.OwnerName)
                    </td>
                    <td>
                        <a asp-action="CheckDetails" asp-controller="Products" asp-route-CheckId="@i.CheckId"> Details </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="CreateCheck" class="btn btn-primary"> Create new check </a>
<form asp-action="FindCheck">
    <label> Find check by Check Id</label>
    <input type="text" name="CheckId" />
    <input type="submit" value="Find" class="btn btn-primary" />
</form>
