<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CheckSeparatorMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="header">
        <a class="menu-item" asp-action="Index" asp-controller="Home">Home</a>
        <a class="menu-item" asp-action="Index" asp-controller="Products">Check Menu</a>
        <a class="menu-item" asp-action="Login" asp-controller="Account">Login</a>
        <a class="menu-item" asp-action="Register" asp-controller="Account">Register</a>
        <a class="menu-item" asp-action="LogOut" asp-controller="Account">Log out</a>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
