@model CheckSeparatorMVC.Models.ProductAndUserViewModel
@{
    ViewData["Title"] = "Select Products";
}

<h1>Products</h1>

<h2>Your name: @Model.UserName</h2>

<h3>Select products from the list.</h3>

<form asp-action="ConfirmSelectedProducts" asp-controller="Products">
    <table>
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Amount
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Products is null)
            {
                <p class="ModelEmpty">
                    There is no products!
                </p>
            }
            else
            {
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            <input type="checkbox" name="Name" value="@item.Name" />
                            <input type="hidden" name="Price" value="@item.Price" />
                            <input type="hidden" name="Amount" value="@item.Amount" />
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <input type="hidden" name="UserName" value="@Model.UserName"/>

    <input type="submit" value="Confirm" class="btn btn-primary"/>
</form>


<a asp-action="Index" class="btn btn-primary">Back to List</a>